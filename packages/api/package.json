{
    "name": "@saas-foundry/api",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "dev-client": "tsx watch src/client.ts",
        "build": "tsup",
        "start": "node dist/index.js",
        "check-types": "tsc --noEmit",
        "lint": "eslint src/ --max-warnings 0",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:studio": "drizzle-kit studio",
        "db:push": "drizzle-kit push:pg",
        "db:setup": "node src/scripts/db-scripts/setup-db.js",
        "db:reset": "node src/scripts/db-scripts/reset-db.js",
        "db:setup-schema": "node src/scripts/db-scripts/setup-schema.js",
        "docker:db:start": "node src/scripts/db-scripts/docker-db-setup.js start",
        "docker:db:stop": "node src/scripts/db-scripts/docker-db-setup.js stop",
        "docker:db:restart": "node src/scripts/db-scripts/docker-db-setup.js restart",
        "docker:db:setup": "node src/scripts/db-scripts/docker-db-setup.js setup",
        "docker:db:start-setup": "node src/scripts/db-scripts/docker-db-setup.js start-setup"
    },
    "dependencies": {
        "@fastify/cors": "^10.0.2",
        "@trpc/client": "11.0.0-rc.802",
        "@trpc/server": "11.0.0-rc.802",
        "drizzle-orm": "^0.39.3",
        "fastify": "^5.2.1",
        "pg": "^8.13.3",
        "pino": "^9.6.0",
        "pino-pretty": "^13.0.0",
        "zod": "^3.24.2",
        "dotenv": "latest"
    },
    "devDependencies": {
        "@saas-foundry/eslint-config": "workspace:*",
        "@saas-foundry/typescript-config": "workspace:*",
        "@types/node": "^22.13.4",
        "@types/pg": "^8.11.11",
        "drizzle-kit": "^0.30.4",
        "eslint": "^9.20.1",
        "ts-node": "^10.9.2",
        "tsup": "^8.3.6",
        "tsx": "^4.19.3",
        "typescript": "^5.7.3"
    }
}